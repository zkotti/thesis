%	\end{muneqn}
%
% where:
%	- 'label' is the label used to reference the Equation.
%	   We can refer to the equation as Table~\ref{eqn:label} in
%          the text.
%
\newenvironment{muneqn}[1]{%
	\begin{equation}
		\label{eqn:#1}
}{
	\end{equation}
}

